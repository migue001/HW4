<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tensorflow.demo.Main2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/texttt"
                    android:layout_marginTop="17dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Texto"
                    android:textSize="20dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/boton1"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:padding="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="60dp"

                >
                <ImageButton
                    android:id="@+id/hablar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:background="@drawable/boton_duolingo"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="60dp">
                <ImageButton
                    android:id="@+id/borrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/volver"
                    android:background="@drawable/botonborrar"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            >
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recycleropciones"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
